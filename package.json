{
  "name": "sugarsugar",
  "version": "1.0.0",
  "description": "webservice to ask dexcom for blood glucose data",
  "main": "api/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.18.0"
  },
  "scripts": {
    "start": "node api/index.js",
    "dev": "NODE_ENV=development node api/index.js",
    "test": "lsof -ti tcp:3000 | xargs kill || true && concurrently -k -s first -n server,test \"npm run dev\" \"npm run test:run\"",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "build": "node build.js",
    "vercel-build": "npm run build",
    "setup": "cp .env.vercel.example .env.vercel && echo 'Please edit .env.vercel with your actual credentials'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky",
    "verify": "npm install && npm run lint:fix && npm run format:fix && npm test && npm run build"
  },
  "keywords": [
    "dexcom",
    "glucose",
    "api",
    "cgm",
    "diabetes"
  ],
  "author": "Dave Alger <me@davealger.com>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.6.1",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  }
}
